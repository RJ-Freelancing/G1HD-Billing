{
  "name": "g1hd_api",
  "version": "0.1.0",
  "description": "Restful API service for G1HD-Billing",
  "main": "index.js",
  "license": "Apache-2.0",
  "private": true,
  "scripts": {
    "start": "nodemon --ignore tests --exec babel-node index.js",
    "test": "NODE_ENV=testing nodemon --exec nyc mocha --require babel-core/register --colors --slow 1000 tests/**/*.js",
    "test-report": "NODE_ENV=testing nyc mocha --require babel-core/register --reporter mocha-junit-reporter --reporter-options mochaFile=./coverage/junit.xml --exit tests/**/*.js",
    "build": "NODE_ENV=production babel . -s -D -d build --presets env"
  },
  "dependencies": {
    "axios": "^0.18.0",
    "bcryptjs": "^2.4.3",
    "express": "^4.16.2",
    "express-promise-router": "^3.0.3",
    "helmet": "^3.14.0",
    "joi": "^14.0.0",
    "jsonwebtoken": "^8.3.0",
    "mongoose": "5.3.4",
    "morgan": "^1.9.0",
    "mysql": "^2.16.0",
    "mysql2": "^1.6.1",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "rotating-file-stream": "^1.3.9"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-plugin-istanbul": "^5.1.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.7.0",
    "mocha": "^5.2.0",
    "mocha-junit-reporter": "^1.18.0",
    "nodemon": "^1.17.5",
    "nyc": "^13.1.0",
    "supertest": "^3.3.0"
  },
  "babel": {
    "presets": [
      "env"
    ],
    "plugins": [
      "transform-object-rest-spread",
      "transform-runtime"
    ],
    "env": {
      "test": {
        "plugins": [
          "istanbul"
        ]
      }
    }
  },
  "nyc": {
    "reporter": [
      "html",
      "clover",
      "text"
    ],
    "exclude": [
      "tests/**/*.js"
    ]
  }
}
